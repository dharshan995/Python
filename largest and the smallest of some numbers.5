# Initialize an empty list to store numbers
numbers = []

# Ask user for the number of numbers
num_numbers = int(input("Enter the number of numbers: "))

# Loop through each number and add it to the list
for i in range(num_numbers):
    number = float(input(f"Enter number {i + 1}: "))
    numbers.append(number)

# Initialize variables to store the largest and smallest numbers
largest = numbers[0]
smallest = numbers[0]

# Iterate through the numbers to find the largest and smallest
for number in numbers:
    if number > largest:
        largest = number
    if number < smallest:
        smallest = number

# Display the largest and smallest numbers
print(f"The largest number is: {largest}")
print(f"The smallest number is: {smallest}")
